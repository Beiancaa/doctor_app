<p id="notice"><%= notice %></p>

<h1><center>Listing Doctors</center></h1>

<table class='table-striped table table-bordered table-hover'  >
  <thead>
    <tr class="success">
      <th><center>First name</center></th>
      <th><center>Last name</center></th>
      <th><center>License number</center></th>
      <th><center>Email</center></th>
      <th><center>Phone number</center></th>
      <th colspan="3"><center>Actions</center></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><center><%= doctor.first_name %></center></td>
        <td><center><%= doctor.last_name %></center></td>
        <td><center><%= doctor.license_number %></center></td>
        <td><center><%= doctor.email %></center></td>
        <td><center><%= doctor.phone_number %></center></td>
        <td><%= link_to 'Show', doctor, class:"btn btn-primary"  %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete,  class:"btn btn-danger",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path , class:"btn btn-success" %> <br><br>
<%= link_to 'Patients List', patients_path, class:"btn btn-success"  %>
